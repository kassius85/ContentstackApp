@page "/"
<div class="card">
    <div class="card-body">
        @if (ResponseHome.IsNull())
        {
            <img class="loading" src="gift/loading.gif" />
        }
        else
        {
            <h1>@ResponseHome.Home.Title</h1>

            <div class="alert alert-secondary mt-4" role="alert">
                <span class="text-wrap">
                    @ResponseHome.Home.Description
                </span>
            </div>

            <h3>@ResponseHome.Home.MostRequestedSubtitle</h3>

            <ProductList ProductDetailList="ResponseHome.Home.ProductDetailList" CardsStyle="ResponseHome.Home.CardsStyle"/>
        }
    </div>
</div>